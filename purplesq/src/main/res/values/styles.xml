<resources>

    <style name="BorderlessDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActivatedBackgroundIndicatorStyle" >
        <item name="android:background">@drawable/activated_background_holo_light_purplesq</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="PopupMenu.Purplesq" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_purplesq</item>
    </style>

    <style name="DropDownListView.Purplesq" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_purplesq</item>
    </style>


    <style name="DropDownNav.Purplesq" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_purplesq</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_purplesq</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_purplesq</item>
    </style>

    <style name="ProgressBar.Purplesq" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_purplesq</item>
    </style>

    <style name="AutoCompleteTextViewPurpleSQ" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light_purplesq</item>
        <item name="android:background">@drawable/edit_text_holo_light_purplesq</item>
    </style>

    <style name="ButtonPurpleSQ" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btn_default_holo_light_purplesq</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageButtonPurpleSQ" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light_purplesq</item>
    </style>

    <style name="SpinnerPurpleSQ" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light_purplesq</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light_purplesq</item>
    </style>

    <style name="TabPurpleSQ">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/tab_indicator_holo_purplesq</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextPurpleSQ">
        <item name="android:textColor">@color/purplesq_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ProgressBarPurpleSQ" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light_purplesq</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light_purplesq</item>
    </style>

    <style name="SeekBarPurpleSQ" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light_purplesq</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light_purplesq</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light_purplesq</item>
    </style>

    <style name="TogglePurpleSQ" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light_purplesq</item>
    </style>


    <style name="WhiteTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="GrayButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rounded_gray</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- CROP IMAGE STYLES -->
    <style name="crop_blue_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/crop_button_color</item>
        <item name="android:minWidth">75dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#555555</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


</resources>
