<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_half_margin"
    android:layout_marginTop="@dimen/vertical_half_margin">

    <TextView
        android:id="@+id/item_payment_participants_tv_number"
        style="@style/TextAppearance_Headline_Grey900"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="1"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/item_payment_participants_tv_number"
        android:layout_toRightOf="@id/item_payment_participants_tv_number"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_payment_participants_tv_name"
            style="@style/TextAppearance_Subhead_Grey900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="First Name"/>


        <TextView
            android:id="@+id/item_payment_participants_tv_insitute"
            style="@style/TextAppearance_Caption_Grey900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Name of college"/>
    </LinearLayout>
</RelativeLayout>
