<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/basic_padding"
    android:paddingTop="@dimen/basic_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_faq_question"
            style="@style/TextAppearance_Subhead_Teal500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="start|left"
            android:layout_marginBottom="@dimen/minimum_margin"
            android:layout_marginTop="@dimen/minimum_margin"
            android:text="Q."/>

        <TextView
            android:id="@+id/item_faq_tv_question"
            style="@style/TextAppearance_Subhead_Teal500"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/minimum_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/minimum_margin"
            android:layout_toEndOf="@id/item_faq_question"
            android:layout_toRightOf="@id/item_faq_question"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_half_margin">

        <TextView
            android:id="@+id/item_faq_answer"
            style="@style/TextAppearance_Subhead_Grey800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="start|left"
            android:layout_marginBottom="@dimen/minimum_margin"
            android:layout_marginTop="@dimen/minimum_margin"
            android:text="A."/>

        <TextView
            android:id="@+id/item_faq_tv_answer"
            style="@style/TextAppearance_Subhead_Grey800"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/minimum_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/minimum_margin"
            android:layout_toEndOf="@id/item_faq_answer"
            android:layout_toRightOf="@id/item_faq_answer"/>
    </RelativeLayout>

</LinearLayout>