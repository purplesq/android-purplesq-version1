<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_transaction_cardview_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar"
    android:layout_margin="@dimen/horizontal_margin"
    android:background="@color/white"
    android:elevation="8dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="150dp"
        android:orientation="horizontal">

        <com.purplesq.purplesq.customviews.VerticalTextView
            android:id="@+id/item_invoices_detailed_cardview_tv_cardname"
            style="@style/TextAppearance_Headline_White700"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:paddingBottom="4dp"
            android:paddingTop="12dp"
            android:textColor="@color/white700"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/half_margin"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:layout_marginStart="@dimen/half_margin"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/half_margin">

            <TextView
                android:id="@+id/item_invoices_detailed_cardview_tv_eventname"
                style="@style/TextAppearance_Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_half_margin"
                android:layout_marginTop="@dimen/vertical_half_margin"
                android:gravity="left"
                android:paddingLeft="@dimen/half_padding"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/item_invoices_detailed_cardview_tv_eventdate"
                style="@style/TextAppearance_Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/half_padding"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/item_invoices_detailed_cardview_layout_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/item_invoices_detailed_cardview_tv_eventamount"
                style="@style/TextAppearance_Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:paddingLeft="32dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>