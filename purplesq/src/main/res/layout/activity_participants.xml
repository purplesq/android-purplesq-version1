<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.purplesq.purplesq.activities.ParticipantsActivity">

    <TextView
        android:id="@+id/activity_participants_tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="4dp"
        android:text="Participants :"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ScrollView
        android:id="@+id/activity_participants_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/activity_participants_layout_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/activity_participants_tv_add_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_content_add"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="Add another"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
