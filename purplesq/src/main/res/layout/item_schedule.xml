<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/item_schedule_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:text="10:00 am"/>

    <TextView
        android:id="@+id/item_schedule_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_schedule_tv_time"
        android:gravity="center_vertical"
        android:text="Assemble"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_schedule_tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_schedule_tv_title"
        android:layout_alignRight="@id/item_schedule_tv_title"
        android:layout_below="@id/item_schedule_tv_title"
        android:gravity="center_vertical"
        android:text="Assemble at Hotel Bangalore Gate, Kempe Gowda Road, Opposite Maneka Theatre, Chikpete"/>

</RelativeLayout>