<com.purplesq.purplesq.customviews.ObservableScrollView
    android:id="@+id/fragment_event_details_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context="com.purplesq.purplesq.activities.EventDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/fragment_event_details_topcard_iv_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@drawable/ab_background_textured_purplesq"
                android:contentDescription="Image"
                android:scaleType="fitXY"/>

            <View
                android:id="@+id/fragment_event_details_cardview_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_staus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/fragment_event_details_statuscard_tv_eligibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/fragment_event_details_statuscard_tv_availability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/fragment_event_details_statuscard_tv_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="Overview"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <TextView
                    android:id="@+id/fragment_event_details_statuscard_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/fragment_event_details_featurescard_tv_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="Features"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="Schedule"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_whatuget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/fragment_event_details_whatugetcard_tv_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="What you get"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_partners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="Partners"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <GridLayout
                    android:id="@+id/fragment_event_details_partnerscard_gridlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="FAQ"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fragment_event_details_cardview_contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Questions?"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <Button
                    android:id="@+id/fragment_event_details_contactuscard_btn_contactus"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"/>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fragment_event_details_layout_top_sticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/fragment_event_details_topcard_tv_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold"/>

            <View
                android:id="@+id/fragment_event_details_topcard_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fragment_event_details_topcard_tv_heading"
                android:background="@color/PaleGray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_event_details_topcard_seperator">

                <Button
                    android:id="@+id/fragment_event_details_topcard_btn_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Book"/>

                <TextView
                    android:id="@+id/fragment_event_details_topcard_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/fragment_event_details_topcard_tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/fragment_event_details_topcard_btn_book"
                    android:gravity="center"/>

            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>

</com.purplesq.purplesq.customviews.ObservableScrollView>
