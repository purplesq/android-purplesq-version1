<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_invoices_participants_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/basic_margin"
    android:layout_marginTop="@dimen/basic_margin">

    <TextView
        android:id="@+id/item_invoices_participants_tv_number"
        style="@style/TextAppearance_Title_Grey900"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="4dp"
        android:gravity="center_horizontal|top"
        android:lines="1"
        android:maxLines="1"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/item_invoices_participants_tv_number"
        android:layout_toRightOf="@id/item_invoices_participants_tv_number"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_invoices_participants_tv_name"
            style="@style/TextAppearance_Subhead_Grey900"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="First Name"/>


        <TextView
            android:id="@+id/item_invoices_participants_tv_insitute"
            style="@style/TextAppearance_Caption_Grey900"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Name of college"/>
    </LinearLayout>
</RelativeLayout>
