<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_cardlayout_imageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:contentDescription="Image"
            android:background="@drawable/ab_background_textured_purplesq"
            />

        <LinearLayout
            android:id="@+id/item_cardlayout_layout_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_cardlayout_imageview"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_cardlayout_tv_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="M"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/item_cardlayout_tv_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="T"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/item_cardlayout_tv_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="W"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/item_cardlayout_tv_thirsday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="T"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/item_cardlayout_tv_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="F"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/item_cardlayout_tv_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="S"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/item_cardlayout_tv_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="S"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_cardlayout_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_cardlayout_layout_week"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/item_cardlayout_layout_week"
            android:layout_below="@id/item_cardlayout_imageview"
            android:gravity="center_vertical"
            android:text="Lorem Ipsum"/>

        <Button
            android:id="@+id/item_cardlayout_btn_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_cardlayout_layout_week"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Book"/>

        <TextView
            android:id="@+id/item_cardlayout_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_cardlayout_btn_book"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/item_cardlayout_btn_book"
            android:layout_below="@id/item_cardlayout_textview1"
            android:layout_toLeftOf="@id/item_cardlayout_btn_book"
            android:gravity="center_vertical"
            android:text="Lorem Ipsum"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>